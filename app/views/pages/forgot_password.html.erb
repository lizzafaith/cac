
<div class="padding" id="login">
  <h3>Password Reset</h3>

  <%= form_tag 'user' do %>
    <label>Username</label>
    <%= text_field_tag 'username' %>

    <label>Email</label>
    <%= text_field_tag 'email'  %>

    <div class="clear"></div>

    <%= submit_tag 'Reset password' %>

    <div class="clear"></div>
  <% end %>





</div>
<h1>Listing pages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Descr</th>
    <th>User</th>
    <th>Created at</th>
    <th>Modified at</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.name %></td>
    <td><%= page.descr %></td>
    <td><%= page.user_id %></td>
    <td><%= page.created_at %></td>
    <td><%= page.modified_at %></td>
    <td><%= page.category_id %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

